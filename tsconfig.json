{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": [
      "astro/client",
      "vite/client",
      "@webgpu/types"
    ]
  },
  "include": [
    "astro.config.mjs",
    "svelte.config.js",
    "tailwind.config.ts",
    "postcss.config.cjs",
    "src",
    "tests",
    "vitest.config.ts",
    "playwright.config.ts"
  ],
  "exclude": ["dist"]
}
