{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "root": true,
  "files": {
    "ignoreUnknown": true,
    "includes": ["**/*.{js,jsx,ts,tsx,cjs,mjs,json}"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "error"
      }
    }
  }
}
